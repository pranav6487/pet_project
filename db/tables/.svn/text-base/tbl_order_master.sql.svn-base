DROP TABLE IF EXISTS tbl_order_master;
CREATE TABLE tbl_order_master
(
  order_id INT(10) UNSIGNED NOT NULL auto_increment,
  cust_id VARCHAR(255) NOT NULL,
  order_date date NOT NULL,
  order_cost DECIMAL(33,22) unsigned NOT NULL DEFAULT 0.0000000000000000000000,
  order_status VARCHAR(255) DEFAULT 'In Process',
  order_active TINYINT(3) UNSIGNED DEFAULT 1,
  payment_status TINYINT(3) UNSIGNED DEFAULT 0,
  payment_date date DEFAULT NULL,
  ship_date date DEFAULT NULL,
  ship_id INT(10) UNSIGNED DEFAULT NULL,
  payment_id INT(10) UNSIGNED DEFAULT NULL,
  creation_date timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (order_id),
  UNIQUE KEY order_id (order_id)
);
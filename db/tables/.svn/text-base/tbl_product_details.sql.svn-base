DROP TABLE IF EXISTS tbl_product_details;
CREATE TABLE tbl_product_details
(
  product_dtl_id INT(10) UNSIGNED NOT NULL auto_increment,
  product_id INT(10) UNSIGNED NOT NULL,
  meteric_type VARCHAR(255) DEFAULT NULL,
  meteric_name VARCHAR(255) DEFAULT NULL,
  meteric_val DECIMAL(5,2) UNSIGNED DEFAULT 0.00,
  unit_prize DECIMAL(20,10) UNSIGNED DEFAULT 0.0000000000,
  discount DECIMAL(5,2) UNSIGNED DEFAULT 0.00,
  quant_per_unit_type INT(10) UNSIGNED DEFAULT NULL,
  pd_attr VARCHAR(255) DEFAULT NULL,
  creation_date timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (product_dtl_id),
  UNIQUE KEY product_dtl_id (product_dtl_id)
);


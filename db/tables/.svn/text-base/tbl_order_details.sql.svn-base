DROP TABLE IF EXISTS tbl_order_details;
CREATE TABLE tbl_order_details
(
  order_dtl_id INT(10) UNSIGNED NOT NULL auto_increment,
  order_id INT(10) UNSIGNED NOT NULL,
  brand_id INT(10) UNSIGNED NOT NULL,
  product_id INT(10) UNSIGNED NOT NULL,
  product_dtl_id INT(10) UNSIGNED NOT NULL,
  pd_unit_price DECIMAL(20,10) UNSIGNED DEFAULT 0.0000000000,
  pd_quant INT(10) UNSIGNED NOT NULL,
  discount DECIMAL(5,2) UNSIGNED DEFAULT 0.00,
  total_price DECIMAL(33,22) unsigned NOT NULL DEFAULT 0.0000000000000000000000,
  status TINYINT(3) UNSIGNED DEFAULT 1,
  creation_date timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (order_dtl_id),
  UNIQUE KEY order_dtl_id (order_dtl_id)
);